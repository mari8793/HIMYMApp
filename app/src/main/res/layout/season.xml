<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">


    <ScrollView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:backgroundTint="@color/colorFondo"
            android:layout_weight="0.90">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uno"
                android:id="@+id/s1"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dos"
                android:id="@+id/s2"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="213dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tres"
                android:id="@+id/s3"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cuatro"
                android:id="@+id/s4"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cinco"
                android:id="@+id/s5"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/seis"
                android:id="@+id/s6"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/siete"
                android:id="@+id/s7"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ocho"
                android:id="@+id/s8"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nueve"
                android:id="@+id/s9"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="172dp" />
        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>